{
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ],
    "extends": "google",
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "rules": {
        "strict": 0,
        "max-len": [2, 160, 4],
        "linebreak-style": 0,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "radix": [2, "as-needed"],

        "generator-star-spacing": 0,
        "new-cap": 0,
        "array-bracket-spacing": 0,
        "object-curly-spacing": 0,
        "object-shorthand": 0,
        "arrow-parens": 0,
        "no-await-in-loop": 0,

        "babel/generator-star-spacing": 1,
        "babel/new-cap": 1,
        "babel/array-bracket-spacing": 1,
        "babel/object-curly-spacing": 1,
        "babel/object-shorthand": 1,
        "babel/arrow-parens": 1,
        "babel/no-await-in-loop": 1
    }
}
